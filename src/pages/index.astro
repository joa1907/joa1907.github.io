      <Experience />
    </section>

    <section id="skills" class="w-full mx-auto lg:w-[850px] pt-16 md:pt-20">
      <h2 class="text-2xl font-semibold mb-5 flex gap-2 items-center">
        <SkillIcon />
        Skills
      </h2>
      <Skills />
    </section>

    <section id="projects" class="w-full mx-auto lg:w-[850px] pt-16 md:py-20">
      <h2 class="text-2xl font-semibold mb-5 flex gap-2 items-center">
        <CodeIcon class="size-6" />
        Proyectos
      </h2>
      <Projects />
    </section>

    <section id="contact" class="w-full mx-auto lg:w-[850px] pt-16 md:pt-20">
      <h2 class="text-2xl font-semibold mb-5 flex gap-2 items-center">
        <MailIcon class="size-6 mt-[3px]" />
        Contact
      </h2>
      <Contact />
    </section>
  </main>

