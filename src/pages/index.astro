---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import SkillIcon from "../icons/Skill.astro";
import Contact from "../components/Contact.astro";
import MailIcon from "../icons/Mail.astro";
---

<Layout
  title="Portfolio de Joaquin Cardoso - Desarrollador Web"
  description="Portfolio de Joaquin Cardoso desarrollador web fullstack, con tÃ­tulo de analista de sistemas"
>
  <main class="px-4">
    <section class="w-full mx-auto lg:w-[850px] lg:pt-52 lg:pb-20 pt-20 pb-10">
      <Hero />
    </section>

    <section id="experience" class="w-full mx-auto lg:w-[850px] pt-16 md:pt-20">
      <h2 class="text-2xl font-semibold mb-5 flex gap-2 items-center">
        <BriefcaseIcon class="size-6" />
