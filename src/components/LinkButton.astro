---
import LinkIcon from "../icons/Link.astro";
---

<a
  {...Astro.props}
  target="_blank"
  rel="noopener noreferrer"
  class="text-blue-muted hover:text-gray-light border border-blue-muted bg-gray-light hover:bg-blue-muted
  focus:ring-4 focus:outline-none focus:ring-gray-light font-medium rounded-lg text-sm px-4 py-2.5 flex items-center gap-2
  text-center dark:bg-inherit dark:border-gray-600 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-800"
>
  <LinkIcon class="size-6" />
  <slot />
</a>
